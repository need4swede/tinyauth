# ==============================================================================
# TINYAUTH CONFIGURATION
# ==============================================================================
# This file contains all possible environment variables for TinyAuth.
# Copy this file to .env and uncomment/modify the variables you need.

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
PORT=3000
ADDRESS=0.0.0.0
APP_URL=http://localhost:3000

# ==============================================================================
# SECURITY & AUTHENTICATION
# ==============================================================================
# Application secret (must be 32 characters)
SECRET=app_secret
# Alternative: read secret from file
#SECRET_FILE=app_secret_file

# User authentication - provide either inline users or users file
USERS=your_user_password_hash
#USERS_FILE=users_file

# Cookie security settings
COOKIE_SECURE=false

# Session configuration
SESSION_EXPIRY=7200
LOGIN_TIMEOUT=300
LOGIN_MAX_RETRIES=5

# Logging level (-1 to 5: -1=silent, 0=panic, 1=fatal, 2=error, 3=warn, 4=info, 5=debug)
LOG_LEVEL=0

# ==============================================================================
# OAUTH PROVIDERS
# ==============================================================================

# OAuth whitelist (comma-separated email addresses or domains)
OAUTH_WHITELIST=

# Auto-redirect to OAuth provider (none, github, google, microsoft, generic)
OAUTH_AUTO_REDIRECT=none

# GitHub OAuth
GITHUB_CLIENT_ID=github_client_id
GITHUB_CLIENT_SECRET=github_client_secret
#GITHUB_CLIENT_SECRET_FILE=github_client_secret_file

# Google OAuth
GOOGLE_CLIENT_ID=google_client_id
GOOGLE_CLIENT_SECRET=google_client_secret
#GOOGLE_CLIENT_SECRET_FILE=google_client_secret_file

# Microsoft OAuth
MICROSOFT_CLIENT_ID=microsoft_client_id
MICROSOFT_CLIENT_SECRET=microsoft_client_secret
#MICROSOFT_CLIENT_SECRET_FILE=microsoft_client_secret_file
MICROSOFT_AUTH_URL=microsoft_auth_url
MICROSOFT_TOKEN_URL=microsoft_token_url
MICROSOFT_USER_URL=microsoft_user_url
MICROSOFT_SCOPES=microsoft_scopes

# Generic OAuth Provider
GENERIC_CLIENT_ID=generic_client_id
GENERIC_CLIENT_SECRET=generic_client_secret
#GENERIC_CLIENT_SECRET_FILE=generic_client_secret_file
GENERIC_NAME=My OAuth
GENERIC_SCOPES=generic_scopes
GENERIC_AUTH_URL=generic_auth_url
GENERIC_TOKEN_URL=generic_token_url
GENERIC_USER_URL=generic_user_url
GENERIC_SKIP_SSL=false

